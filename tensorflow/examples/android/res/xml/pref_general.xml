<PreferenceScreen xmlns:android="http://schemas.android.com/apk/res/android">

    <SwitchPreference
        android:defaultValue="false"
        android:key="testing_switch"
        android:title="Enable testing" />

    <SwitchPreference
        android:defaultValue="true"
        android:key="tracking_switch"
        android:title="Enable tracking" />

    <SwitchPreference
        android:defaultValue="true"
        android:key="tracking_decision_switch"
        android:summary="Enable decision on whether to track previously detected objects or to do a new detection"
        android:title="Enable tracking decision" />

    <ListPreference
        android:defaultValue="0"
        android:entries="@array/pref_example_list_titles"
        android:entryValues="@array/pref_example_list_values"
        android:key="offloading_mode"
        android:negativeButtonText="@null"
        android:positiveButtonText="@null"
        android:title="Offloading Mode" />

    <ListPreference
        android:defaultValue="416"
        android:entries="@array/pref_resolution_list_titles"
        android:entryValues="@array/pref_resolution_list_values"
        android:key="frame_resolution"
        android:negativeButtonText="@null"
        android:positiveButtonText="@null"
        android:title="Frame Resolution" />

</PreferenceScreen>